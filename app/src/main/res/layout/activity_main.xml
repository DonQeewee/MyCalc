<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/nums"
        android:layout_marginBottom="-5dp"
        android:paddingHorizontal="15dp"
        android:paddingVertical="35dp"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="60sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/nums"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:paddingTop="20dp">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@id/on"
                android:text="ON"
                style="@style/BtnTypeA" />

            <Button
                android:id="@id/num1"
                style="@style/BtnTypeB"
                android:text="1" />

            <Button
                android:id="@id/num4"
                android:text="4"
                style="@style/BtnTypeB"/>

            <Button
                android:id="@id/num7"
                android:text="7"
                style="@style/BtnTypeB"/>

            <Button
                android:id="@id/del"
                android:text="DEL"
                style="@style/BtnTypeA"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@id/off"
                android:text="OFF"
                style="@style/BtnTypeA"/>

            <Button
                android:id="@id/num2"
                style="@style/BtnTypeB"
                android:text="2" />

            <Button
                android:id="@id/num5"
                android:text="5"
                style="@style/BtnTypeB"/>

            <Button
                android:id="@id/num8"
                android:text="8"
                style="@style/BtnTypeB"/>

            <Button
                android:id="@id/num0"
                android:text="0"
                style="@style/BtnTypeB"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@id/ac"
                android:text="AC"
                style="@style/BtnTypeA"/>

            <Button
                android:id="@id/num3"
                android:text="3"
                style="@style/BtnTypeB"/>

            <Button
                android:id="@id/num6"
                android:text="6"
                style="@style/BtnTypeB"/>

            <Button
                android:id="@id/num9"
                android:text="9"
                style="@style/BtnTypeB"/>

            <Button
                android:id="@id/point"
                android:text="."
                style="@style/BtnTypeB"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@id/div"
                android:text="/"
                style="@style/BtnTypeA"/>

            <Button
                android:id="@id/times"
                android:text="X"
                style="@style/BtnTypeA"/>

            <Button
                android:id="@id/minus"
                android:text="-"
                style="@style/BtnTypeA"/>

            <Button
                android:id="@id/plus"
                android:text="+"
                style="@style/BtnTypeA"/>

            <Button
                android:id="@id/equals"
                android:text="="
                style="@style/BtnTypeA"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>